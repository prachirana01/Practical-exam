#(a) sum of first n odd terms.
num = int(input("Print sum of odd numbers till : "))
sum = 0;
for i in range(1, num + 1):
    #Check for odd or not.
    if(not(i%2)==0):
        sum+=i;
print("\nSum of odd numbers from 1 to", num, "is :", sum)


#(b) sum of first n even terms.
num = int(input("Print sum of even numbers till : "))
total = 0
for i in range(1, num + 1):
   # Check for even or not.
    if((i % 2) == 0):
        total = total + i
print("\nSum of even numbers from 1 to", num, "is :", total)


#(c)1, 2, 4, 3, 5, 7, 9, 6, 8, 10, 11, 13.. till n-th term
def findSum(num):
    sumo = 0
    sume = 0
    x = 1
    cur = 0
    ans = 0
    while (num > 0):
        inc = min(x, num)
        num -= inc
        if (cur == 0):
            ans = ans + odd_sum(sumo + inc) - odd_sum(sumo)
            sumo += inc
        else:
            ans = ans + even_sum(sume + inc) - even_sum(sume)
            sume += inc
        x *= 2
        cur ^= 1
    return(ans)
